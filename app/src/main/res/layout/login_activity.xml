<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="64dp"
    android:background="@color/cerulean"
    app:layout_constraintTop_toTopOf="parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Swiper"
        android:id="@+id/title"
        android:textColor="@color/white"
        android:fontFamily="@font/kiwifont"
        android:gravity="center"
        android:textSize="100sp"
        />
    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/swiperlogobetter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.4"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/start_group"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/create"
            android:text="Login"
            android:background="@drawable/rounded_button"
            style="@style/primaryStartButton"
            />
        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/signedout"
            android:text="Create Account"
            android:background="@drawable/rounded_button"
            style="@style/primaryStartButton"
            />
        <Button
            android:id="@+id/signedout"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Continue without signing in"
            android:background="@drawable/rounded_borderless_button"
            style="@style/secondaryStartButton"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/login_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        >
        <TextView
            android:id="@+id/user_login_prompt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Username/Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            />
        <EditText
            android:id="@+id/user_login_input"
            android:layout_height="50sp"
            android:layout_width="match_parent"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_login_prompt"
            />
        <TextView
            android:id="@+id/user_password_prompt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_login_input"
            />
        <EditText
            android:id="@+id/user_password_input"
            android:layout_height="50sp"
            android:layout_width="match_parent"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_password_prompt"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:id="@+id/register_group"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:id="@+id/register_user_prompt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            />
        <EditText
            android:id="@+id/register_user_input"
            android:layout_height="50sp"
            android:layout_width="match_parent"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_user_prompt"
            />
        <TextView
            android:id="@+id/register_email_prompt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_user_input"
            />
        <EditText
            android:id="@+id/register_email_input"
            android:layout_height="50sp"
            android:layout_width="match_parent"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_email_prompt"
            />
        <TextView
            android:id="@+id/register_password_prompt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_email_input"
            />
        <EditText
            android:id="@+id/register_password_input"
            android:layout_height="50sp"
            android:layout_width="match_parent"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_password_prompt"
            />
        <TextView
            android:id="@+id/register_cpassword_prompt"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="Confirm Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_password_input"
            />
        <EditText
            android:id="@+id/register_cpassword_input"
            android:layout_height="50sp"
            android:layout_width="match_parent"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_cpassword_prompt"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/options"
        >
        <Button
            android:id="@+id/backButton"
            android:layout_width="120sp"
            android:layout_height="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            android:text="Back"
            android:background="@drawable/rounded_borderless_button"
            style="@style/secondaryStartButton"
            />
        <Button
            android:id="@+id/submit"
            android:layout_width="120sp"
            android:layout_height="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            android:text="Continue"
            android:textColor="@color/black"
            android:background="@drawable/rounded_button"
            style="@style/secondaryStartButton"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>