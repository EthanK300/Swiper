<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="64dp"
    android:background="@color/cerulean"
    app:layout_constraintTop_toTopOf="parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Swiper"
        android:textColor="@color/white"
        android:fontFamily="@font/kiwifont"
        android:gravity="center"
        android:textSize="100sp"

        />
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/create"
        android:text="Login"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button"
        />
    <Button
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signedout"
        android:text="Create Account"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button"
        />
    <Button
        android:id="@+id/signedout"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Continue without signing in"
        android:textColor="@color/white"
        android:background="@drawable/rounded_borderless_button"
        style="?android:attr/borderlessButtonStyle"
        />
</androidx.constraintlayout.widget.ConstraintLayout>