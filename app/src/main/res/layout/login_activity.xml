<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="64dp"
    android:background="@color/cerulean"
    app:layout_constraintTop_toTopOf="parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Swiper"
        android:textColor="@color/white"
        android:fontFamily="@font/kiwifont"
        android:gravity="center"
        android:textSize="100sp"
        />
    <ImageView
        android:src="@drawable/swiperlogobetter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.4"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/start_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/create"
            android:text="Login"
            android:background="@drawable/rounded_button"
            style="@style/primaryStartButton"
            />
        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/signedout"
            android:text="Create Account"
            android:background="@drawable/rounded_button"
            style="@style/primaryStartButton"
            />
        <Button
            android:id="@+id/signedout"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Continue without signing in"
            android:background="@drawable/rounded_borderless_button"
            style="@style/secondaryStartButton"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/login_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/register_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/backButton"
        android:layout_width="120sp"
        android:layout_height="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Back"
        android:background="@drawable/rounded_borderless_button"
        style="@style/secondaryStartButton"
        />
</androidx.constraintlayout.widget.ConstraintLayout>